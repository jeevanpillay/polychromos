{
  "name": "polychromos",
  "version": "0.1.0",
  "description": "CLI tool for Polychromos design system",
  "type": "module",
  "bin": {
    "polychromos": "./dist/index.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./lib": "./dist/lib/index.js"
  },
  "files": [
    "dist",
    "!dist/**/__tests__",
    "!dist/**/*.test.*"
  ],
  "keywords": [
    "polychromos",
    "design",
    "cli",
    "design-system"
  ],
  "author": "Jeevan Pillay Studios",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeevanpillay/polychromos.git",
    "directory": "packages/polychromos"
  },
  "bugs": {
    "url": "https://github.com/jeevanpillay/polychromos/issues"
  },
  "homepage": "https://github.com/jeevanpillay/polychromos/tree/main/packages/polychromos#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules coverage *.tsbuildinfo",
    "dev": "tsc --watch",
    "format": "prettier --check .",
    "lint": "eslint .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "pnpm exec dotenv -e ../../apps/polychromos-app/.vercel/.env.development.local -v VITE_CONVEX_URL=http://127.0.0.1:3210 -- vitest run --config vitest.e2e.config.ts",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@polychromos/types": "workspace:*",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "convex": "^1.31.7",
    "open": "^11.0.0",
    "rfc6902": "^5.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "^3.0.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "catalog:",
    "memfs": "^4.17.0",
    "playwright": "^1.50.0",
    "typescript": "catalog:",
    "vitest": "^3.0.0"
  },
  "prettier": "@repo/prettier-config"
}
