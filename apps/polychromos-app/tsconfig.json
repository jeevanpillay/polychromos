{
  "extends": "@polychromos/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vite/client", "node", "@testing-library/jest-dom"],
    "checkJs": false
  },
  "include": ["src", "vite.config.ts", "convex/**/*.ts", "e2e/**/*.ts", "playwright.config.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist", ".output", "convex/_generated"]
}
