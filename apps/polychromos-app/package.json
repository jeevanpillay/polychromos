{
  "name": "@repo/polychromos-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run dev:setup && concurrently -r npm:dev:web npm:dev:convex",
    "dev:web": "pnpm exec dotenv -e .vercel/.env.development.local -- vite dev",
    "dev:ts": "tsc -b -w",
    "dev:convex": "pnpm exec dotenv -e .vercel/.env.development.local -- npx convex dev",
    "dev:setup": "pnpm exec dotenv -e .vercel/.env.development.local -- node scripts/setup-convex.js",
    "dev:sync-env": "node scripts/sync-env.js",
    "build": "vite build",
    "clean": "git clean -xdf .cache .output dist node_modules",
    "format": "prettier --check . --ignore-path .prettierignore --ignore-path ../../../.gitignore",
    "lint": "eslint .",
    "start": "node .output/server/index.mjs",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:convex": "vitest run convex/**/*.test.ts",
    "test:e2e": "node test/backendHarness.js 'pnpm run test:e2e:run'",
    "test:e2e:run": "just convex env set IS_TEST true && just convex deploy && vitest run e2e/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.60.0",
    "@convex-dev/react-query": "^0.1.0",
    "@fontsource/geist-mono": "^5.1.1",
    "@fontsource/geist-sans": "^5.1.1",
    "@paper-design/shaders-react": "^0.0.71",
    "@polychromos/types": "workspace:*",
    "@repo/ui": "workspace:*",
    "@t3-oss/env-core": "^0.13.10",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-router": "catalog:",
    "@tanstack/react-router-with-query": "^1.130.17",
    "@tanstack/react-start": "catalog:",
    "convex": "^1.31.7",
    "nitro": "3.0.1-alpha.0",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "rfc6902": "^5.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^4.0.4",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/vite": "catalog:",
    "@tanstack/router-devtools": "catalog:",
    "@tanstack/router-plugin": "catalog:",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.2.0",
    "@types/node": "catalog:",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/coverage-v8": "^3.0.0",
    "concurrently": "~9.2.1",
    "convex-test": "^0.0.38",
    "dotenv-cli": "^11.0.0",
    "eslint": "catalog:",
    "jsdom": "^26.0.0",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-image-optimizer": "^2.0.3",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^3.0.0"
  },
  "prettier": "@repo/prettier-config"
}
