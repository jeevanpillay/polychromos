{
  "name": "polychromos",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "pnpm": "10.5.2"
  },
  "packageManager": "pnpm@10.5.2",
  "scripts": {
    "build": "turbo run build",
    "build:app": "turbo run build -F @polychromos/app",
    "build:www": "turbo run build -F @polychromos/www",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo run dev",
    "dev:app": "turbo watch dev -F @polychromos/app --continue",
    "dev:www": "turbo watch dev -F @polychromos/www --continue",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=verbose",
    "typecheck": "turbo run typecheck",
    "ui": "pnpm --filter @polychromos/ui ui",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@polychromos/prettier-config": "workspace:*",
    "@vitest/coverage-v8": "^3.0.0",
    "prettier": "^3.7.4",
    "turbo": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  },
  "prettier": "@polychromos/prettier-config"
}
